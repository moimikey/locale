{
  "name": "locale2",
  "version": "2.0.2",
  "description": "Try as hard as possible to detect the client's language tag (\"locale\") in node or the browser. Browserify and Webpack friendly!",
  "main": "index.js",
  "scripts": {
    "test": "tape ./test.js | faucet",
    "build-webpack": "webpack --verbose --progress --colors",
    "test-bs": "source .credentials &>/dev/null; BROWSERSTACK_KEY=$BROWSERSTACK_KEY browserstack-runner --verbose",
    "test-bs-local": "open http://localhost:8080/webpack-dev-server/test-bs.html && webpack-dev-server --config ./webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moimikey/locale2.git"
  },
  "keywords": [
    "locale",
    "country",
    "code",
    "language",
    "l10n",
    "i18n",
    "browser",
    "lcid",
    "lang",
    "local",
    "enus",
    "en-US",
    "en-GB",
    "engb",
    "en",
    "eng",
    "5646",
    "rfc",
    "region",
    "rfc5646",
    "bcp47",
    "bcp"
  ],
  "author": "Michael Scott Hertzberg <mshertzberg@gmail.com> (http://hertzber.gs/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moimikey/locale2/issues"
  },
  "homepage": "https://github.com/moimikey/locale2",
  "devDependencies": {
    "faucet": "0.0.1",
    "rewire": "2.5.1",
    "tape": "4.4.0"
  },
  "optionalDependencies": {
    "browserstack-runner": "0.4.1",
    "browserstack-tape-reporter": "1.0.2",
    "enhanced-resolve": "2.0.2",
    "rewire-webpack": "1.0.1",
    "tape-catch": "1.0.4",
    "webpack": "1.12.11",
    "webpack-dev-server": "1.14.0"
  }
}
